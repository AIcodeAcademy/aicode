---
import type { CollectionEntry } from 'astro:content';

type Topic = CollectionEntry<'courses'>['data']['curriculum'][number];

interface Props {
  curriculum: Topic[];
}

const { curriculum } = Astro.props;
---

<section class="curriculum matrix-shadow">
  <h2>Curriculum</h2>
  <div class="modules">
    {curriculum.map((module, index) => (
      <div class="module">
        <h3>Module {index + 1}: {module.module}</h3>
        <ul>
          {module.topics.map(topic => (
            <li>{topic}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .curriculum {
    padding: 2rem;
    background-color: rgba(71, 212, 105, 0.05);
    border: 1px solid var(--brand-color);
    margin-bottom: 2rem;
  }

  h2 {
    margin-bottom: 2rem;
  }

  .modules {
    display: grid;
    gap: 2rem;
  }

  .module {
    padding: 1rem;
    border: 1px solid var(--shadow-color);
  }

  h3 {
    margin-bottom: 1rem;
    color: var(--brand-color);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
  }

  li::before {
    content: ">";
    position: absolute;
    left: 0;
    color: var(--brand-color);
  }
</style>