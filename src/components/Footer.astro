<style>
  .main-footer {
    margin-top: 4rem;
    padding: 2rem 0 0;
    border-top: 1px solid var(--brand-color);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding-bottom: 2rem;
  }

  .footer-section h3 {
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-bottom {
    padding: 1rem 0;
    border-top: 1px solid var(--shadow-color);
    text-align: center;
    font-size: 0.9rem;
  }
</style>