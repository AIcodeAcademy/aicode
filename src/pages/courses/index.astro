---
import { getCollection } from 'astro:content';
import CourseList from '../../components/CourseList.astro';
import Layout from '../../layouts/Layout.astro';

const courses = await getCollection('courses');
---

<Layout 
  title="AI Code Academy Courses"
  description="Explore our comprehensive AI development courses. From fundamentals to advanced topics, find the perfect course for your journey."
>
  <div class="container">
    <h1>AI Code Academy Courses</h1>
    <p class="lead">Discover our comprehensive curriculum designed to take you from beginner to AI expert.</p>
    <CourseList courses={courses} showDetails={true} />
  </div>
</Layout>

<style>
  .container {
    padding: 2rem 0;
  }

  h1 {
    text-align: center;
    margin-bottom: 1rem;
  }

  .lead {
    text-align: center;
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem 0;
    }
  }
</style>