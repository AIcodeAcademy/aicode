---
import { getCollection } from 'astro:content';
import CourseList from '../../components/CourseList.astro';
import Layout from '../../layouts/Layout.astro';

const courses = await getCollection('courses');
---

<Layout 
  title="AI Code Academy Courses"
  description="Explore our comprehensive AI development courses. From fundamentals to advanced topics, find the perfect course for your journey."
>
  <div class="container">
    <h1>AI Code Academy Courses</h1>
    <p class="lead">Discover our comprehensive curriculum designed to take you from beginner to AI expert.</p>
    <CourseList courses={courses} showDetails={true} />
  </div>
</Layout>

<style>
  /* Layout variables */
  :root {
    --section-padding: 2rem;
    --section-padding-mobile: 1rem;
    --title-spacing: 1rem;
    
    /* Typography */
    --lead-size: 1.2rem;
  }

  .container {
    padding: var(--section-padding) 0;
  }

  h1 {
    text-align: center;
    margin-bottom: var(--title-spacing);
  }

  .lead {
    text-align: center;
    font-size: var(--lead-size);
    margin-bottom: var(--section-padding);
    color: var(--text-color);
    font-family: var(--mono-font);
  }

  @media (max-width: 768px) {
    .container {
      padding: var(--section-padding-mobile) 0;
    }
  }
</style>