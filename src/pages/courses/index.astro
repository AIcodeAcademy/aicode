---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const courses = await getCollection('courses');
---

<Layout 
  title="AI Code Academy Courses"
  description="Explore our comprehensive AI development courses. From fundamentals to advanced topics, find the perfect course for your journey."
>
  <div class="container">
    <h1>AI Code Academy Courses</h1>
    <div class="course-grid">
      {courses.map(course => {
        const { title, level, description, duration, price } = course.data;
        
        return (
          <div class="course-card matrix-shadow">
            <h2>{title}</h2>
            <div class="course-meta">
              <span class="pill">{level}</span>
              <span class="pill">{duration}</span>
              <span class="pill">{price}</span>
            </div>
            <p>{description}</p>
            <a href={`/courses/${course.slug}`} class="cta-button">Learn More</a>
          </div>
        );
      })}
    </div>
  </div>
</Layout>

<style>
  .container {
    padding: 2rem 0;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .course-card {
    padding: 2rem;
    background-color: rgba(71, 212, 105, 0.05);
    border: 1px solid var(--brand-color);
  }

  .course-meta {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    flex-wrap: wrap;
  }

  .course-card p {
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem 0;
    }
  }
</style>