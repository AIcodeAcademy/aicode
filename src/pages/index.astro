---
import { getCollection } from 'astro:content';
import CourseList from '../components/CourseList.astro';
import MarketingSection from '../components/MarketingSection.astro';
import MatrixText from '../components/MatrixText.astro';
import Layout from '../layouts/Layout.astro';

const courses = await getCollection('courses');
---

<Layout 
  title="Welcome to AI Code Academy" 
  description="Learn AI development with our cutting-edge curriculum. Master machine learning, deep learning, and ethical AI development."
>
  <section class="hero">
    <div class="container">
      <h1>MASTER <MatrixText text="AI-DRIVEN" />DEVELOPMENT</h1>
      <p class="hero-text">Learn to Code Smarter, not harder.<span class="cursor"> |</span></p>
      <a href="/courses" class="cta-button">Explore Courses</a>
    </div>
  </section>

  <MarketingSection />

  <section class="courses">
    <div class="container">
      <h2>Our Courses</h2>
      <CourseList courses={courses} showDetails={false} />
    </div>
  </section>

  <section class="testimonials">
    <div class="container">
      <h2>Student Success Stories</h2>
      <div class="testimonial-grid">
        <blockquote class="matrix-shadow">
          <p>"AI Code Academy transformed my career. I'm now working as an AI Engineer at a top tech company."</p>
          <cite>- Sarah Chen, AI Engineer</cite>
        </blockquote>
        <blockquote class="matrix-shadow">
          <p>"The practical approach to learning AI development here is unmatched."</p>
          <cite>- James Wilson, ML Researcher</cite>
        </blockquote>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid var(--shadow-color);
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-text {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .cursor {
    color: var(--brand-color);
    font-weight: bold;
    animation: blink 2s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .courses {
    padding: 4rem 0;
  }

  .testimonials {
    padding: 4rem 0;
    background-color: rgba(71, 212, 105, 0.05);
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  blockquote {
    padding: 2rem;
    background-color: var(--bg-color);
    border: 1px solid var(--brand-color);
  }

  blockquote p {
    margin-bottom: 1rem;
  }

  cite {
    color: var(--brand-color);
    font-style: normal;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-text {
      font-size: 1.2rem;
    }
  }
</style>