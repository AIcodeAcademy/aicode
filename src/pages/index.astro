---
import Layout from '../layouts/Layout.astro';
import MarketingSection from '../components/MarketingSection.astro';

const courses = [
  {
    title: "AI Fundamentals",
    level: "Beginner",
    description: "Master the basics of artificial intelligence and machine learning.",
    outcomes: ["Understanding AI concepts", "Python for AI", "Basic Neural Networks"]
  },
  {
    title: "Advanced ML",
    level: "Intermediate",
    description: "Deep dive into machine learning algorithms and implementations.",
    outcomes: ["Deep Learning", "TensorFlow", "Model Optimization"]
  },
  {
    title: "AI Ethics",
    level: "All Levels",
    description: "Explore the ethical implications of AI development.",
    outcomes: ["Ethical Framework", "Bias Detection", "Responsible AI"]
  }
];
---

<Layout 
  title="Welcome to AI Code Academy" 
  description="Learn AI development with our cutting-edge curriculum. Master machine learning, deep learning, and ethical AI development."
>
  <section class="hero">
    <div class="container">
      <h1>Master AI Development</h1>
      <p class="hero-text">Transform your future with cutting-edge AI education</p>
      <a href="/courses" class="cta-button">Explore Courses</a>
    </div>
  </section>

  <MarketingSection />

  <section class="courses">
    <div class="container">
      <h2>Our Courses</h2>
      <div class="course-grid">
        {courses.map(course => (
          <div class="course-card matrix-shadow">
            <h3>{course.title}</h3>
            <span class="pill">{course.level}</span>
            <p>{course.description}</p>
            <ul>
              {course.outcomes.map(outcome => (
                <li>{outcome}</li>
              ))}
            </ul>
            <a href={`/courses/${course.title.toLowerCase().replace(' ', '-')}`} class="cta-button">
              Learn More
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="testimonials">
    <div class="container">
      <h2>Student Success Stories</h2>
      <div class="testimonial-grid">
        <blockquote class="matrix-shadow">
          <p>"AI Code Academy transformed my career. I'm now working as an AI Engineer at a top tech company."</p>
          <cite>- Sarah Chen, AI Engineer</cite>
        </blockquote>
        <blockquote class="matrix-shadow">
          <p>"The practical approach to learning AI development here is unmatched."</p>
          <cite>- James Wilson, ML Researcher</cite>
        </blockquote>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid var(--shadow-color);
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero-text {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .courses {
    padding: 4rem 0;
  }

  .course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .course-card {
    padding: 2rem;
    background-color: rgba(71, 212, 105, 0.05);
    border: 1px solid var(--brand-color);
  }

  .course-card h3 {
    margin-bottom: 0.5rem;
  }

  .pill {
    margin-bottom: 1rem;
  }

  .course-card ul {
    list-style: none;
    margin: 1rem 0;
  }

  .course-card li {
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .course-card li::before {
    content: ">";
    position: absolute;
    left: 0;
    color: var(--brand-color);
  }

  .testimonials {
    padding: 4rem 0;
    background-color: rgba(71, 212, 105, 0.05);
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  blockquote {
    padding: 2rem;
    background-color: var(--bg-color);
    border: 1px solid var(--brand-color);
  }

  blockquote p {
    margin-bottom: 1rem;
  }

  cite {
    color: var(--brand-color);
    font-style: normal;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-text {
      font-size: 1.2rem;
    }
  }
</style>