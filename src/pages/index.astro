---

import MatrixText from '../components/MatrixText.astro';
import home from '../content/metadata/home';
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title={home.layout.title}
  description={home.layout.description}
>
  <article >
    <header class="center">  
      <h1>MASTER <MatrixText text="AI-DRIVEN" /> DEVELOPMENT</h1>
    </header>
    <main class="center" aria-label={home.title} role="heading" aria-level="1">
      <p><b>{home.hero.subtitle}</b><span class="cursor"> |</span></p>
    </main>
    <footer class="center">
      <a role="button" href="/courses">{home.hero.cta}</a>
    </footer>
  </article>

</Layout>

<style>

  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .cursor {
    color: var(--pico-primary);
    font-weight: bold;
    animation: blink 2s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>
